
<div class="content">
    {{#if type}}
    <h3>{{type.name}}</h3>
    {{/if}}

    <div class="categories">

    {{#each devices}}
    
      <div id="{{this.id}}" class="card" style="width: 18rem;">
        {{!-- <img src="{{this.img}}" class="card-img-top" alt="..."> --}}
        <div class="card-body">
          <div id="carouselExampleIndicators{{this.id}}" class="carousel slide" data-bs-ride="true">
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#carouselExampleIndicators{{this.id}}" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators{{this.id}}" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#carouselExampleIndicators{{this.id}}" data-bs-slide-to="2" aria-label="Slide 3"></button>
  </div>
  
  <div class="carousel-inner">
    {{#each this.images}}
    <div class="carousel-item {{#ifeq @index 2}}active{{/ifeq}}">
      <img src="/{{this.img}}" class="d-block w-100" alt="...">
    </div>
    {{/each}}
    {{!-- <div class="carousel-item">
      <img src="/images/2.jpg.webp" class="d-block w-100" alt="...">
    </div>
    <div class="carousel-item">
      <img src="/images/3.jpg.webp" class="d-block w-100" alt="...">
    </div> --}}
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators{{this.id}}" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators{{this.id}}" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.info}}</p>
          <p class="card-text">Цена: {{this.price}} руб.</p>
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@getbootstrap" id="btnZakaz">Заказать!</button>
          {{> winalert}}
        </div>
      </div>
    {{/each}}

    </div>
    
</div>
