
<div class="content">
    {{#if type}}
    <h3>{{type.name}}</h3>
    {{/if}}

    <div class="select-new-bu">
      <a href="/device/new/{{type.id}}" class="new"><button type="button" class="btn btn-warning">Новые</button></a> 
      <a href="/device/bu/{{type.id}}" class="bu"><button type="button" class="btn btn-warning">Б/У</button></a>
      <a href="/device/{{type.id}}" class="all"><button type="button" class="btn btn-warning">Все</button></a>
    </div>

    <div class="categories">

    {{#each allDev}}
      <div id="{{this.id}}" class="card" style="width: 18rem; margin-bottom: 14px; margin-right: 14px;">
        <img src="{{this.img}}" class="card-img-top" alt="...">
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.info}}</p>
          <p class="card-text">Цена: {{this.price}} руб.</p>
          {{!-- <button type="button" class="btn btn-warning">Warning</button> --}}
          <button type="button" class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#exampleModal" data-bs-whatever="@getbootstrap" id="btnZakaz">Заказать!</button>
          {{> winalert}}
        </div>
      </div>
    {{/each}}

    </div>
    
</div>



